<!DOCTYPE html>
<html ng-app="groneApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @RenderSection("CssStyle")
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://use.fontawesome.com/7026bbd10a.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("JavaScript")
</head>
<body ng-controller="groneAppController" ng-init="GetPosts()" id="GroneAppController">
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Grone</p>
        </footer>
    </div>
</body>
</html>